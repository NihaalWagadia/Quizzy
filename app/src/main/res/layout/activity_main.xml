<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#01579B"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:text="@string/quizzy"
        android:textSize="45sp" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/app_name"
        android:layout_marginStart="45dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="45dp"
        android:background="@android:color/black"
        app:cardCornerRadius="20dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#29B6F6"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="15dp">

                <LinearLayout
                    android:id="@+id/play_linear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="30dp"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/play_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/my_play"
                        android:onClick="onClicker"
                        android:src="@drawable/play"
                        android:tint="@color/shade_blue" />


                    <TextView
                        android:id="@+id/play"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="onClicker"
                        android:text="@string/play"
                        android:textSize="23sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="14dp"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/level_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/my_level"
                        android:onClick="gotoLevel"
                        android:src="@drawable/level"
                        android:tint="@color/shade_blue" />

                    <TextView
                        android:id="@+id/level"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="gotoLevel"
                        android:text="@string/level"
                        android:textSize="23sp" />
                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:padding="15dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:orientation="horizontal">


                    <!--                    <ImageButton-->
                    <!--                        android:id="@+id/sound_image"-->
                    <!--                        android:layout_width="wrap_content"-->
                    <!--                        android:layout_height="wrap_content"-->
                    <!--                        android:contentDescription="@string/my_level"-->
                    <!--                        android:onClick="soundAdjust"-->
                    <!--                        android:src="@drawable/sound"-->
                    <!--                        android:tint="@color/shade_blue" />-->

                    <!--                    <TextView-->
                    <!--                        android:id="@+id/sound"-->
                    <!--                        android:layout_width="wrap_content"-->
                    <!--                        android:layout_height="wrap_content"-->
                    <!--                        android:onClick="soundAdjust"-->
                    <!--                        android:text="@string/sound"-->
                    <!--                        android:textSize="23sp" />-->
                    <Button
                        android:id="@+id/sound_button"
                        android:layout_width="130dp"
                        android:layout_height="60dp"
                        android:onClick="soundAdjust" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:orientation="horizontal">


                    <ImageButton
                        android:id="@+id/restart_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/my_restart"
                        android:onClick="clearData"
                        android:src="@drawable/restart"
                        android:tint="@color/shade_blue" />

                    <TextView
                        android:id="@+id/restart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="clearData"
                        android:text="@string/restart"
                        android:textSize="23sp" />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>