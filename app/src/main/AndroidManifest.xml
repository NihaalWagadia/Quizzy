<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.puzz.quizzydizzy">


    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name="com.puzz.quizzydizzy.CompletionActivity"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBarTheme"/>
        <activity
            android:name="com.puzz.quizzydizzy.PlayAct"
            android:parentActivityName="com.puzz.quizzydizzy.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBarTheme"
            />
        <activity
            android:name="com.puzz.quizzydizzy.LevelAct"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBarTheme"
            android:parentActivityName="com.puzz.quizzydizzy.MainActivity"/>
        <activity
            android:name="com.puzz.quizzydizzy.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBarTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>